<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:padding="24dp"
    tools:context=".PomodoroTimerActivity">

    <!-- Botón de ajustes en la esquina superior derecha -->
    <Button
        android:id="@+id/settingsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="⚙️"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp" />

    <!-- Imagen del tomate con sombreado -->
    <ImageView
        android:id="@+id/tomatoImage"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:src="@drawable/tomato"
        android:contentDescription="Tomato Image"
        android:elevation="6dp" />

    <!-- Texto del temporizador en grande -->
    <TextView
        android:id="@+id/timerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="25:00"
        android:textSize="48sp"
        android:textStyle="bold"
        android:textColor="#222222"
        android:layout_below="@id/tomatoImage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />

    <!-- Modo de trabajo o descanso -->
    <TextView
        android:id="@+id/modeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Modo: Trabajo"
        android:textSize="20sp"
        android:textColor="#666666"
        android:layout_below="@id/timerText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp" />

</RelativeLayout>
